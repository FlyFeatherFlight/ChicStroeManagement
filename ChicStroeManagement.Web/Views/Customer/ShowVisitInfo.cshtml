            <label style="font-size:10px;color:red">当前客户无跟进人</label>
        }
        else
        {
            @Html.ActionLink("直接申请设计案", "DesignSchemeIndex", "DesignScheme", new { id = Model.ID }, new { @style = "font-size:12px" })
        }
    }

