@model PagedList.IPagedList<ChicStoreManagement.WEB.ViewModel.CustomerInfoModel>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "客户接待信息";
}

<hr />
<p>
    @Html.ActionLink("添加客户接待信息", "AddCustomerView", new { @class = "form-control", @Style = "font-size:12px" })
</p>
@using (Html.BeginForm("CustomerIndex", "Customer", FormMethod.Get))
{
    <p>
        通过客户电话查找: @Html.TextBox("SearchString", ViewBag.CustomerCurrentFilter as string, new { @class = "form-control", @Style = "display:inline" })
        <input id="Submit1" type="submit" value="查询" class="btn" />
    </p>
}
<hr />
@{
    if (Model == null)
    {
        <div class="table-responsive">

            暂无当前店铺接待或跟进的相关数据！
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                    <th style="display:none">
                        ID
                    </th>
                    <th width="10%">店铺</th>
                    <th>接待序号</th>
                    <th>@Html.ActionLink("接待日期", "CustomerIndex", new { sortOrder = ViewBag.CustomerDate })</th>

                    <th> @Html.ActionLink("客户姓名", "CustomerIndex", new { sortOrder = ViewBag.CustomerName })</th>
                    <th>性别</th>
                    <th>年龄段</th>
                    <th>客户类别</th>
                    <th>客户来源</th>

                    <th>客户类型</th>
                    <th>客户电话</th>
                    <th>社交软件</th>
                    <th>来店次数</th>
                    <th>接待人</th>
                    <th>跟进人</th>
                    <th>是否有意向</th>
                    <th width="10%">操作</th>

                </tr>
                @foreach (var item in Model)
                {

                    if (item.跟进人 == null)
                    {
                        #region 如果没有跟进人
                        <tr style="color:red">
                            <td style="display:none"> @Html.DisplayFor(modelItem => item.ID)</td>
                            <td> @Html.DisplayFor(modelItem => item.店铺)</td>
                            <td> @Html.DisplayFor(modelItem => item.接待序号)</td>
                            <td> @Html.DisplayFor(modelItem => item.接待日期)</td>

                            <td> @Html.DisplayFor(modelItem => item.客户姓名)</td>
                            <td> @Html.DisplayFor(modelItem => item.性别)</td>
                            <td> @Html.DisplayFor(modelItem => item.年龄段)</td>
                            <td> @Html.DisplayFor(modelItem => item.客户类别)</td>
                            <td> @Html.DisplayFor(modelItem => item.客户来源)</td>

                            <td> @Html.DisplayFor(modelItem => item.客户类型)</td>
                            <td> @Html.DisplayFor(modelItem => item.客户电话)</td>
                            <td> @Html.DisplayFor(modelItem => item.社交软件)</td>
                            <td> @Html.DisplayFor(modelItem => item.来店次数)</td>
                            <td> @Html.DisplayFor(modelItem => item.接待人)</td>
                            <td> @Html.DisplayFor(modelItem => item.跟进人)</td>
                            @{
                                if (item.是否有意向 == true)
                                {

                                    <td>是</td>
                                }
                                else if (item.是否有意向 == false)
                                {

                                    <td>否</td>
                                }
                                else
                                {
                                    <td>待定</td>
                                }

                            }

                            @{
                                if (item.接待人 == ViewBag.employeeName || item.跟进人 == ViewBag.employeeName || ViewBag.Position==3)
                                {
                                    <td>
                                        @Html.ActionLink("详细", "ShowVisitInfo", new { id = item.ID })| @Html.ActionLink("添加预购", "AddExceptedBuyView", new { receptionid = item.ID, @class = "form-control", @Style = "font-size:12px" })
                                    </td>
                                }

                                else
                                {
                                    <td>
                                        无权限!
                                    </td>
                                }
                            }
                        </tr>
                        #endregion
                    }

                    else
                    {
                        #region 有跟进人
                        <tr>
                            <td style="display:none"> @Html.DisplayFor(modelItem => item.ID)</td>
                            <td> @Html.DisplayFor(modelItem => item.店铺)</td>
                            <td> @Html.DisplayFor(modelItem => item.接待序号)</td>
                            <td> @Html.DisplayFor(modelItem => item.接待日期)</td>

                            <td> @Html.DisplayFor(modelItem => item.客户姓名)</td>
                            <td> @Html.DisplayFor(modelItem => item.性别)</td>
                            <td> @Html.DisplayFor(modelItem => item.年龄段)</td>
                            <td> @Html.DisplayFor(modelItem => item.客户类别)</td>
                            <td> @Html.DisplayFor(modelItem => item.客户来源)</td>

                            <td> @Html.DisplayFor(modelItem => item.客户类型)</td>
                            <td> @Html.DisplayFor(modelItem => item.客户电话)</td>
                            <td> @Html.DisplayFor(modelItem => item.社交软件)</td>
                            <td> @Html.DisplayFor(modelItem => item.来店次数)</td>
                            <td> @Html.DisplayFor(modelItem => item.接待人)</td>
                            <td> @Html.DisplayFor(modelItem => item.跟进人)</td>
                            @{
                                if (item.是否有意向 == true)
                                {

                                    <td>是</td>
                                }
                                else if (item.是否有意向 == false)
                                {

                                    <td>否</td>
                                }
                                else
                                {
                                    <td>待定</td>
                                }

                            }
                            @{
                                if (item.接待人 == ViewBag.employeeName || item.跟进人 == ViewBag.employeeName || ViewBag.Position == 3)
                                {
                                    <td>
                                        @Html.ActionLink("详细", "ShowVisitInfo", new { id = item.ID })| @Html.ActionLink("添加预购", "AddExceptedBuyView", new { receptionid = item.ID, @class = "form-control", @Style = "font-size:12px" })
                                    </td>
                                }

                                else
                                {
                                    <td>
                                        无权限!
                                    </td>
                                }
                            }
                        </tr>
                        #endregion
                    }

                }
            </table>
        </div>

    }
} Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("CustomerIndex", new { page, sortOrder = ViewBag.CustomerCurrentSort, currentFilter = ViewBag.CustomerCurrentFilter }))
<a onclick="javascript:window.history.go(-1);" value="返回上一页">返回上一页</a>
