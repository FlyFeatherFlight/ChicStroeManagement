@model ChicStoreManagement.WEB.ViewModel.DesignSubmitModel

@{
    ViewBag.Title = "DesignApplyInfoView";
}

<h2>@Html.DisplayFor(Model => Model.客户姓名)</h2>
@Html.ActionLink("图纸", "", new { })|@Html.ActionLink("预购", "ExceptedBuyIndex", "CustomerController", new { id = Model.接待记录ID }, new { @Style = "font-size:12px" })
<table>
    <thead>
        <tr><td>软装服务设计案提交表</td></tr>
    </thead>
    <tr>
        <td>客户姓名</td>
        <td>@Html.DisplayFor(Model => Model.客户姓名)</td>
        <td>联系方式</td>
        <td>@Html.DisplayFor(Model => Model.联系方式)</td>
    </tr>
    <tr>
        <td>职业</td>
        <td>@Html.DisplayFor(Model => Model.职业)</td>
        <td>家庭成员</td>
        <td>@Html.DisplayFor(Model => Model.家庭成员)</td>
    </tr>
    <tr>
        <td>楼盘具体位置</td>
        <td>@Html.DisplayFor(Model => Model.楼盘具体位置)</td>
    </tr>
    <tr>
        <td>面积大小</td>
        <td>@Html.DisplayFor(Model => Model.面积大小)</td>
    </tr>
    <tr>
        <td>装修风格</td>
        <td>@Html.DisplayFor(Model => Model.装修风格)</td>
    </tr>
    <tr>
        <td>装修进度</td>
        <td>@Html.DisplayFor(Model => Model.装修进度)</td>
    </tr>
    <tr>
        <td>预算(可细化到空间)</td>
        <td>@Html.DisplayFor(Model => Model.预算)</td>
    </tr>
    <tr>
        <td>客户喜欢或忌讳</td>
    </tr>
    <tr>
        <td>@Html.DisplayFor(Model => Model.客户喜好)</td>
    </tr>
    <tr>
        <td>客户正在比较的品牌或者已经购买的品牌:</td>
    </tr>
    <tr>
        <td>@Html.DisplayFor(Model => Model.客户在意品牌或已购买品牌)</td>
    </tr>
    <tr>
        <td>客户的问题及特殊要求</td>
    </tr>
    <tr>
        <td>@Html.DisplayFor(Model => Model.客户提问与要求)</td>
    </tr>
    <tr>
        <td>项目方案要求</td>
    </tr>
    <tr>
        <td><input type="checkbox" name="整体软装配饰" value="@Html.DisplayFor(Model=>Model.整体软装配饰)" readonly="readonly">整套软装配饰（家具、窗帘、地毯、灯、挂画等）</td>
    </tr>
    <tr>
        <td>家具:@Html.DisplayFor(Model => Model.家具空间)</td>
    </tr>
    <tr>
        <td>
            客户意向产品明细
        </td>
    </tr>
    <tr>
        <td>
            <table>
                @foreach (var item in Model.销售_设计案提交表_客户意向产品明细)
                {
                    <tr>
                        <td>@item.商品型号</td>
                        <td>@item.备注</td>
                    </tr>
                }
            </table>
        </td>
    </tr>
    <tr>
        <td>项目提交时间</td>
        <td>@Html.DisplayFor(Model => Model.项目提交时间)</td>
    </tr>
    <tr>
        <td>项目量房时间</td>
        <td>@Html.DisplayFor(Model => Model.项目量房时间)</td>
    </tr>
    <tr>
        <td>项目预计完成时间</td>
        <td>@Html.DisplayFor(Model => Model.项目预计完成时间)</td>
    </tr>
    <tr>
        <td>销售人员</td>
        <td>@Html.DisplayFor(Model => Model.销售人员)</td>
    </tr>
    <tr>
        <td>软装设计师</td>
        @if (Model.设计人员确认 == true)
        {
            <td>@Html.DisplayFor(Model => Model.设计人员)|已确认</td>
        }
        else
        {
            <td>@Html.DisplayFor(Model => Model.设计人员)|未确认</td>
        }

    </tr>
    <tr>
        <td>店长</td>
        @if (Model.店长确认 == true)
        {
            <td>@Html.DisplayFor(Model => Model.店长)|已确认</td>
        }
        else
        {
            <td>@Html.DisplayFor(Model => Model.店长)|未确认</td>
        }
    </tr>
    <tr>
        <td>审批状态</td>
        <td>@Html.DisplayFor(Model => Model.审批状态)</td>
    </tr>
    <tr>
        <td>最后一次更新人</td>
        <td>@Html.DisplayFor(Model => Model.更新人)</td>
        <td>更新日期</td>
        <td>@Html.DisplayFor(Model => Model.更新日期)</td>
    </tr>
    <tr>
        <td colspan="4" align="center">@Html.ActionLink("修改信息", "EditCustomerView", new { id = Model.Id }) |@Html.ActionLink("修改客户预购", "ExceptedBuyIndex", new { id = Model.Id }) </td>
    </tr>
</table>
<input type="button" onclick="javascript:window.history.go(-1);" value="返回上一页" class="btn" />
