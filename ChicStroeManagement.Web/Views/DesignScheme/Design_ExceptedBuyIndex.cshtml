    }

        function del(otr) {
            var rows = otr.parentNode.parentNode.rowIndex;
            var Id = $("#product tr:eq(" + rows + ") td:eq(0)").html();
            $.ajax({
            type: "POST",
                url: '@Url.Action("DelDesign_ExceptedBuy", "DesignScheme")',
                data: { id: Id },
            datatype: "json",
            async: true,//异步
