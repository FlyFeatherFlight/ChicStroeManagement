<div>

    <form action="@Url.Action("ChangeVisitInfo")" class="form-group" method="post">
          @{var dt = Model; }
        <table class="table table-striped">
            <caption>
                店员回访信息
            </caption>
            <thead>
                <tr>
                    <td>销售雇员</td>
                    <td>客户名</td>
                    <td>回访时间</td>
                    <td>回访方式</td>
                    <td>状态</td>
                    <td>店长确认</td>
                </tr>

            </thead>
            <tbody>
                @{

                    for (int i = 0; i < dt.Rows.Count; i++)
                    {
                        <tr>

                            <td name="AccountName">@dt.Rows[i][0].ToString()</td>
                            <td name="CustomerName">@dt.Rows[i][1].ToString()</td>
                            <td name="StartTime">@dt.Rows[i][2].ToString()</td>
                            <td name="VisitWay">@dt.Rows[i][3].ToString()</td>
                            <td name="VisitResult">@dt.Rows[i][4].ToString()</td>

                            <td >

                             <a>   <input id="Text1" type="text" name="ManagerTips" value="@dt.Rows[i][5].ToString()" /></a>

                                @*<select id="selectid" onchange="setValue()">
                                    <option id="1">情况属实</option>
                                    <option id="2">情况不符合</option>
                                    <option id="3">6</option>
                                </select>*@
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <input id="Submit1" type="submit" value="提交" />
    </form>
</div>

