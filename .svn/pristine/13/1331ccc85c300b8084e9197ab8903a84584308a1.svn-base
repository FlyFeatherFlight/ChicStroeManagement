@model ChicStoreManagement.WEB.ViewModel.SalesOrderViewModel

@{
    ViewBag.Title = "销售订单详情";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div style="width:95%;margin:0 auto;">
    <h3>销售订单详情</h3>

    <input type="button" name="name" value="修改" class="btn btn-primary" onclick="javascript:window.location.href='@Url.Action("SalesOrdersEditView","Customer")?id=@Model.ID'" style="margin:5px 0;" />
    @if (ViewBag.IsManager)
    {
        <input type="button" name="name" value="删除此订单" class="btn btn-primary" onclick="DelAll('@Url.Action("SalesOrderDel", "Customer")',@Model.ID,'@Url.Action("SalesOrdersView", "Customer")?role=true & emid=@Model.员工ID')" style="margin:5px 0;" />
    }
    else
    {<input type="button" name="name" value="删除此订单" class="btn btn-primary" onclick="DelAll('@Url.Action("SalesOrderDel", "Customer")',@Model.ID,'@Url.Action("SalesOrdersView", "Customer")?role=false & emid=@Model.员工ID')" style="margin:5px 0;" />
    }
    <table class="table table-bordered table-striped ">

        <tr class="dl-horizontal">
            <td>
                @Html.DisplayNameFor(model => model.合同编号)
            </td>
            <td style="width:40%;">
                @Html.DisplayFor(model => model.合同编号)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.订单编号)
            </td>
            <td style="width:40%;">
                @Html.DisplayFor(model => model.订单编号)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.单据编号)
            </td>

            <td>
                @Html.DisplayFor(model => model.单据编号)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.单据日期)
            </td>

            <td>
                @Html.DisplayFor(model => model.单据日期)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.店铺)
            </td>

            <td>
                @Html.DisplayFor(model => model.店铺)
            </td>

            <td>
                @Html.DisplayNameFor(model => model.员工)
            </td>

            <td>
                @Html.DisplayFor(model => model.员工)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.客户姓名)
            </td>

            <td>
                @Html.DisplayFor(model => model.客户姓名)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.客户联系方式)
            </td>

            <td>
                @Html.DisplayFor(model => model.客户联系方式)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.客户地址)
            </td>

            <td colspan="3">
                @Html.DisplayFor(model => model.客户地址)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.零售合计)
            </td>

            <td>
                @Html.DisplayFor(model => model.零售合计)
            </td>

            <td>预付金额
            </td>

            <td>
                @Html.DisplayFor(model => model.预付金额_bak)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.单据备注)
            </td>

            <td colspan="3">
                @Html.DisplayFor(model => model.单据备注)
            </td>
        </tr>

        <tr>
            <td>
                @Html.DisplayNameFor(model => model.制单销售人)
            </td>

            <td>
                @Html.DisplayFor(model => model.制单销售人)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.制单日期)
            </td>

            <td>
                @Html.DisplayFor(model => model.制单日期)
            </td>

        </tr>
    </table>
    @Html.Action("SalesOrderDetailsView", "Customer", new { id = Model.ID })
</div>
<script src="~/Scripts/getStoreAPI.js"></script>