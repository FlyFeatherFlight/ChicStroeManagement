<script>
    $("#subMyForm").click(function () {
       
        var mVal = $(".detectionT").val().trim().replace(/\s/g, "");
        var status = false;
        console.log(mVal);
        $.ajax({
            url: '@Url.Action("CheckSalesOrder", "Customer")',
            type: "post",
            data: { ContractNum: mVal},
            dataType: "json",
            cache: false,
            async: true,
            success: function (data) {
                console.log(data)
                if (data.success) {
                    $(".detection").css("color", "green").text("合同单号查询成功！");
                    $("#myForm .red").each(function (i,m) {
                        if (m.value == "" || m.value == null) {
                            return status = true;
                        }
                    })
                    if (status) {
                        alert("请完善信息！");
                    } else {
                        $("#myForm").submit();
                    }
                    
                } else {
                    $(".detection").css("color", "red").text("您输入的合同编号不存在！");
                    alert(data.msg);
                }
            },
            error: function (err) {
                alert("点击过快或网络错误，请稍后重试！")
                console.log(err);
            }
        })
    
    })
    function textEmpty() {
        $(".detection").empty();
    }
    function detection(m) {
        var Val = $(m).val().trim().replace(/\s/g, "");
        console.log(Val);
        $.ajax({
            url: '@Url.Action("CheckSalesOrder", "Customer")',
            type: "post",
            data: { ContractNum: Val},
            dataType: "json",
            cache: false,
            async: true,
            success: function (data) {
                console.log(data)
                if (data.success) {
                    $(".detection").css("color","green").text("合同单号查询成功！")
                } else {
                    $(".detection").css("color", "red").text("您输入的合同编号不存在！")
                }
            },
            error: function (err) {
                alert("点击过快或网络错误，请稍后重试！")
                console.log(err);
            }
        })
    }
</script>

